{
  "name": "trail-finder",
  "version": "1.0.0",
  "description": "Hiking trail finder web application",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run build",
    "postinstall": "npm run build",
    "build": "webpack --config webpack.config.js",
    "start": "node dist/index.js",
    "start:dev": "npm-run-all --parallel watch:server watch:build",
    "watch:build": "webpack --config webpack.config.js --watch",
    "watch:server": "nodemon \"./dist/index.js\" --watch \"./dist\"",
    "lint": "prettier -c src",
    "lint:fix": "prettier -w src"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "engines": {
    "node": "12.16.2"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^6.2.1",
    "ejs": "^3.1.5",
    "husky": "^4.3.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx pretty-quick --staged --write src",
      "pre-push": "npm run lint && npm test"
    }
  }
}
